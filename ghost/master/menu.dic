//This is figuring out what day of the week it is. Leave it alone.
GetWeekDay
{
	if weekday == 0
	{"Domingo"}
	elseif weekday == 1
	{"Lunes"}
	elseif weekday == 2
	{"Martes"}
	elseif weekday == 3
	{"Miercoles"}
	elseif weekday == 4
	{"Jueves"}
	elseif weekday == 5
	{"Viernes"}
	else
	{"Sabado"}
}

//This is finding out whether it's AM or PM. Leave it alone.
GetAP
{
 	if hour >= 0 && hour <= 11
 		{"AM"}
 	else
 		{"PM"}
}

nowhour
{
	if hour12 == 0; "1"
	else; "%(hour12)"
}

nowmin
{
	if minute >= 0 && minute <=9; "0%(minute)"
	else; "%(minute)"
}


